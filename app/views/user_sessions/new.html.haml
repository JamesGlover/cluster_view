%h1<
  Login

- semantic_form_for(@user_session, :url => new_session_path) do |form|
  = form.error_messages

  - form.inputs do
    = form.input(:username)
    = form.input(:password, :as => :password)
    = form.input(:remember_me, :as => :boolean, :required => false)

  - form.buttons do
    = form.commit_button('Login')

